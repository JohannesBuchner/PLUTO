        subroutine setcnsvortex(
     &    chf_const_real[augamma],
     &    chf_const_realvect[aucenter],
     &    chf_const_real[aumach],
     &    chf_const_real[aurnot],
     &    chf_const_real[ausmallness]
     $     )

#include "EBCNSVortexCommon.fh"
#include "EBEOSCommon.fh"

        real_t  rtemp, ptemp

        gamma = augamma

        chf_dterm[
        centerx = aucenter(0);
        centery = aucenter(1);
        centerz = aucenter(2)]
        conden = gamma
        conpress = one
        consound = one
        mach = aumach
        conmaxvel = mach*consound
        rnot = aurnot

        smallr = ausmallness
        smallu = ausmallness
        smallp = ausmallness

        return
        end
